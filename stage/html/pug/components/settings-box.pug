.settings-box.hide-settings


    //- img.toggle-settings(src="./pug/static/cog.png", alt="", srcset="")
    .toggle-settings
        i.fas.fa-cog.fa-lg
    .settings-content
        .colors-settings.options-title
            h3 colors settings

            - var themes = ['red-theme' , 'green-theme' , 'blue-theme' , 'orange-theme' , 'purple-theme']
            ul.list-unstyled
                each theme in themes
                    li(data-theme=theme)
        .sidebar-settings.options-title 
            h3 font settings
        .header-settings.options-title
            h3 sidebar settings
    